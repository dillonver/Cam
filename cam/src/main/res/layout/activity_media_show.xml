<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/v_video_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100" />

        <com.dillon.video.JzvdStd
            android:id="@+id/jz_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/v_video_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/lay_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/v_photo_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />

            <com.dillon.supercam.utils.view.photoview.PhotoView
                android:id="@+id/photo_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/v_photo_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />
        </LinearLayout>

    </FrameLayout>


</FrameLayout>